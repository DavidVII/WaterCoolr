<%= form_for(@comment) do |f| %>
  <%= render 'shared/error_messages', object: @comment %>
  <div class="field">
    <%= f.text_area :message, placeholder: "Add a comment" %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn" %>
  </div>
  <%= f.hidden_field :link_id, value: @link.id %>
<% end %>
