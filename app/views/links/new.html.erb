<div id="new-link" class="span3 offset4">
  <h3>Submit a link</h3>

  <%= form_for(@link) do |f| %>
    <%= render 'shared/error_messages', object: @link %>
    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :url %>
      <%= f.text_field :url %>
    </div>
    <div class="actions">
      <%= f.submit class: "btn" %>
    </div>
  <% end %>
</div>